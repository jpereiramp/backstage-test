---
apiVersion: helm.toolkit.fluxcd.io/v2
kind: HelmRelease
metadata:
  name: hello-world
  namespace: qa-1
spec:
  interval: 10m
  timeout: 5m
  chart:
    spec:
      chart: hello-world
      version: '0.0.x'
      sourceRef:
        kind: HelmRepository
        name: hello-world
      interval: 5m
  releaseName: hello-world
  install:
    remediation:
      retries: 3
  upgrade:
    remediation:
      retries: 3
  values:
    replicaCount: 2
    labels:
      teamName: pace
    env: qa-1